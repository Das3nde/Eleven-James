.container
  %h2
    News

  = link_to 'Add News', new_admin_news_path

  .content.photo-list
    .table-view
      %table.ej-table{cellpadding: "5px"}
        %tr
          %td{style: "width: 200px;"}
            Title
          %td{style: "width: 200px;"}
            Date

        -@news.each do |news|
          %tr
            %td
              = link_to news.title, edit_admin_news_path(news.id)
            %td
              = news.date




