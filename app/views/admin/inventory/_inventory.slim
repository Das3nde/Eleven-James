table.ej-table
            tr
              ruby:
                cols = [
                  {text: "Product Id", classname: "id", width: 135},
                  {text: "Model", classname: "model", width: 327},
                  {text: "Brand", classname: "brand", width: 210},
                  {text: "Service Type", classname: "service", width: 205},
                  {text: "Expected Completion", classname: "completion", width: 170},
                  {text: "", classname: "noarrow", width: 40}
                ]
              - cols.each do |i|
                th class="#{i[:classname]}"  style="width:#{i[:width]}px;"
                  span.cgrid.compact
                    span= i[:text]
                    a.sort class="#{'active' if i[:text] == 'Expected Completion'}" href="#"
            tbody
              - 10.times do |i|
                tr class="#{'even' if i%2 == 1}"
                  ruby:
                    cols = [
                      {text: "######", classname: "id", width: 135},
                      {text: "Chronomat", classname: "model", width: 327, extra: "<div class='cgrid compact'><div class='label'>Vendor<br/>Rep<br/>Address</div><div class='value'>Jimâ€™s Watch Repair<br/>Sam S.<br/>860 East 74th Street<br/>New York, NY 10010</div></div>"},
                      {text: "Breiting", classname: "brand", width: 210, extra: "Pickup Date Date<br/>Work Estimate<br/>Completion Date"},
                      {text: "Repair", classname: "service", width: 205, extra: "3/10/13<br/>4 Days<br/>3/14/16"},
                      {text: "-6 Days", classname: "completion red", width: 170},
                      {text: "<img src='/assets/select-arrow-red.png' class='down'/><img src='/assets/select-arrow-up.png' class='up'/>", classname: "arrow", width: 40}
                    ]
                  - cols.each do |cell|
                      td class="#{cell[:classname]}" style="width:#{cell[:width]}px;"
                        span= raw cell[:text]
                        - if cell.has_key?(:extra)
                          .extra= raw cell[:extra]