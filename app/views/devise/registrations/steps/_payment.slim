li.section.step4
  .header
    .cgrid.compact
      .bullet Step 5
      h3
        | Make payment arrangements for your
        em 6 Months of Master Craftsman
        |  timepiece service...
  .cgrid.compact
    .billing-info
      h5 Billing Information
      .form
        = fields_for :billing_address, BillingAddress.new do |ba|
          .row.cgrid.compact
            label for="billing-first-name"
              | First Name
              sup *
            = ba.text_field :first_name

          .row.cgrid.compact
            label for="billing-last-name"
              | Last Name
              sup *
            = ba.text_field :last_name
          .row.cgrid.compact
            label for="billing-address"
              | Address
              sup *
            = ba.text_field :address_line
          .row.cgrid.compact
            label for="billing-apt-unit"
              | Apt / unit
              sup *
            = ba.text_field :apt_unit
          .row.cgrid.compact
            label for="billing-city"
              | City
              sup *
            = ba.text_field :city
          .row.cgrid.compact
            label for="billing-state"
              | state
              sup *
            .select-wrapper.field
              .value New York
              .arrow
              = ba.select :state, options_for_select(us_states.unshift(['', '']))
          .row.cgrid.compact
            label for="billing-zip"
              | zip
              sup *
            = ba.text_field :zip
          .row.cgrid.compact
            label for="billing-phone"
              | phone
              sup *
            = ba.text_field :phone
    /! End billing
    .shipping-info
      .overlay
      h5 Shipping Information
      .form
        = fields_for :shipping_address, ShippingAddress.new do |sa|
          .row.cgrid.compact
            label for="shipping-first-name"
              | First Name
              sup *
            = sa.text_field :first_name
          .row.cgrid.compact
            label for="shipping-last-name"
              | Last Name
              sup *
            = sa.text_field :last_name
          .row.cgrid.compact
            label for="shipping-address"
              | Address
              sup *
            = sa.text_field :address_line
          .row.cgrid.compact
            label for="shipping-apt-unit"
              | Apt / unit
              sup *
            = sa.text_field :apt_unit
          .row.cgrid.compact
            label for="shipping-city"
              | City
              sup *
            = sa.text_field :city
          .row.cgrid.compact
            label for="shipping-state"
              | state
              sup *
            .select-wrapper.field
              .value New York
              .arrow
              = sa.select :state, options_for_select(us_states.unshift(['', '']))
          .row.cgrid.compact
            label for="shipping-zip"
              | zip
              sup *
