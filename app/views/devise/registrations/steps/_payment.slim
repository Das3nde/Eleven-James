          .row.cgrid.compact
            label for="shipping-phone"
              | phone
              sup *
            = sa.text_field :phone
    /! End shipping info
    .card-info
      h5 Visa, Mastercard, Amex or Discover
      #payment_errors
      .form
        .row.cgrid.compact
          label for="card-num"
            | Card #
            sup *

          = text_field_tag :cc_num
        .row.cgrid.compact
          label for="card-type"
            | Card Type
            sup *
          .field.cgrid.compact.card-expiry
            .select-wrapper.card-expiry-month
              .value
              .arrow
              = select_tag "cc_type", options_for_select([['Visa', 'visa'], ['Mastercard', 'mastercard'], ['Amex', 'amex'], ['Discover', 'discover']])

        .row.cgrid.compact
          label for="card-expiry-month"
            | Expiration
            sup *
          .field.cgrid.compact.card-expiry
            .select-wrapper.card-expiry-month
              .value 1
              .arrow
              = select_tag "cc_expiry_month", options_for_select((1..12).to_a)

            .select-wrapper
              .value 2013
              .arrow
              = select_tag "cc_expiry_year", options_for_select((2013..2020).to_a)

        .row.cgrid.compact.card-ccv
          label for="card-ccv-1"
            | CCV
            sup *
          .field.cgrid.compact
            = text_field_tag :cvv, '', class: 'card-ccv-1'

        .row.cgrid.compact.card-ssn
          label for="card-ssn"
            | Social Security #
            sup *
          .field.compact.cgrid
            = text_field_tag 'ssn-1', '', class: 'card-ssn-1'
            .sep
            = text_field_tag 'ssn-2', '', class: 'card-ssn-2'
            .sep
            = text_field_tag 'ssn-3', '', class: 'card-ssn-3'
        .checkbox-row.shipping-billing-same
          input#shipping-billing-same name="shipping-billing-same" type="checkbox"
          label.small-checkbox for="shipping-billing-same" my shipping and billing information are the same
