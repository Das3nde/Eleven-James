                      label Phone Office
                      .field 212.555.1234
            .section.rotation-section
              h3 Current Rotation
              .content.cgrid.compact
                img src="/assets/admin/watch01.jpg"
                .info.cgrid
                  .row.cgrid
                    label Product ID
                    .field ######-034
                  .row.cgrid
                    label Due date
                    .field 3/25/13
                  .row.cgrid
                    label Brand
                    .field Rolex
                  .row.cgrid
                    label Return Transit
                    .field Event Drop Off
                  .row.cgrid
                    label Model
                    .field Calatrava
            .section.rotation-section
              h3 Upcoming Rotation
              .content.cgrid.compact
                img src="/assets/admin/watch02.jpg"
                .info.cgrid
                  .row.cgrid
                    label Product ID
                    .field ######-034
                  .row.cgrid
                    label Due date
                    .field 3/25/13
                  .row.cgrid
                    label Brand
                    .field Rolex
                  .row.cgrid
                    label Return Transit
