$('.signup-error').remove();

<%if @status%>
  window.location.href = '/collection';
<%else%>
  <%@errors.each do |k,v|%>
    <%if k == 'payment_errors'%>
      $("#<%=k%>").append("<span class='signup-error'><%=v%></span>")
    <%else%>
      $("#<%=k%>").siblings('label').append("<span class='signup-error'><%=v%></span>")
    <%end%>
  <%end%>
<%end%>