              .cgrid.header
                = link_to "Queue", "#", class: "active"
                = link_to "Rotation History", "#"
                = link_to "Suggested Watches", "#"
              .page-controls.cgrid
                .alpha
                  .select-wrapper
                    .value
                    .arrow.red
                    select
                      option value="5" 5
                      option value="10" 10
                      option value="15" 15
                      option value="20" 20
