                .field Active
                .arrow
                .action-bar-dropdown
                  .table-view
                    table.ej-table
                      tr
                        th style="width:166px"
                          span.cgrid.compact
                            span Month

                        th style="width:166px"
                          span.cgrid.compact
                            span Payment Due

                        th style="width:130px"
                          span.cgrid.compact
                            span Amount

                        th style="width:205px"
                          span.cgrid.compact
                            span Payment Received

                        th style="width:86px"
                          span.cgrid.compact
                            span Paid
                      - 3.times do |i|
                        tr class="#{'even' if i%2 == 1}"
                          td style="width:166px"
                            span Jan 2013
                          td style="width:166px"
                            span 1/1/13
                          td style="width:130px"
                            span $925.00
                          td style="width:205px"
                            span 1/1/13
                          td style="width:86px"
                            span.buttonset
                              label for="paid1"
                              input#paid1 type="checkbox"
                      - 2.times do |i|
                        tr class="#{'even' if i%2 == 1}"
                          td style="width:166px"
                            span.disable Jan 2013
                          td style="width:166px"
                            span.disable 1/1/13
                          td style="width:130px"
                            span.disable $925.00
                          td style="width:205px"
                          td style="width:86px"
                    .button-row.not-centered.css-center
                      a.primary.button href="#" Update
                      a.button href="#" Cancel
